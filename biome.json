{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noImplicitBoolean": "error",
				"useConsistentArrayType": "warn"
			},
			"suspicious": {
				"noDebugger": "error",
				"noCatchAssign": "error",
				"noConsole": "warn"
			},
			"complexity": {
				"noForEach": "warn",
				"noExtraBooleanCast": "error"
			},
			"security": {
				"noDangerouslySetInnerHtml": "warn"
			},
			"a11y": {
				"noAutofocus": "warn",
				"noRedundantAlt": "warn"
			}
		}
	}
}
